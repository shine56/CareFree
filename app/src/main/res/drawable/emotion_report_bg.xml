<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="#086072ff"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <item android:bottom="3dp"
        android:left="0dp"
        android:right="0dp">
        <shape>
            <solid android:color="#106072ff"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>

    <item android:top="0dp"
        android:bottom="5dp"
        android:left="0dp"
        android:right="0dp">
        <shape>
            <solid android:color="@color/White"/>
            <corners android:radius="15dp"/>
            <stroke android:color="#096072ff"
                android:width="1dp"/>
        </shape>
    </item>
</layer-list>