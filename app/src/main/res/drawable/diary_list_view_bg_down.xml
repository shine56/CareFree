<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="#126e7fff"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <item android:bottom="3dp"
            android:left="0dp"
            android:right="2dp">
        <shape>
            <solid android:color="#246e7fff"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>

    <item android:top="0dp"
            android:bottom="4dp"
            android:left="0dp"
            android:right="3dp">
        <shape>
            <solid android:color="@color/press"/>
            <corners android:radius="15dp"/>
            <stroke android:color="#096072ff"
                    android:width="1dp"/>
        </shape>
    </item>
</layer-list>