<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.example.a73233.carefree.note.view.NoteWriteActivity"/>
        <import type="com.example.a73233.carefree.bean.NoteBean"/>
        <variable
            name="bean"
            type="NoteBean" />
        <variable
            name="noteWriteActivity"
            type="NoteWriteActivity" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBg"
        tools:context=".note.view.NoteWriteActivity">

        <FrameLayout
            android:id="@+id/note_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:onClick="@{noteWriteActivity.onClick}"
                android:id="@+id/note_back"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/back_black"
                android:layout_width="23dp"
                android:layout_height="23dp">
            </ImageView>

            <TextView
                android:id="@+id/note_write_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@{bean.monthAndDay}"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />
            <ImageView
                android:onClick="@{noteWriteActivity.onClick}"
                android:id="@+id/note_complete"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:src="@mipmap/complete_black"
                android:layout_width="25dp"
                android:layout_height="25dp">
            </ImageView>
        </FrameLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/note_toolbar"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="29dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/note_text_bg">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/note_write_type_0"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/note_list_bg_0"
                            android:onClick="@{noteWriteActivity.onClick}"
                            android:text="@{bean.rank == 0 ? @string/right : @string/nothing}" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/note_write_type_1"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/note_list_bg_1"
                            android:onClick="@{noteWriteActivity.onClick}"
                            android:text="@{bean.rank == 1 ? @string/right : @string/nothing}" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/note_write_type_2"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/note_list_bg_2"
                            android:onClick="@{noteWriteActivity.onClick}"
                            android:text="@{bean.rank == 2 ? @string/right : @string/nothing}" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/note_write_type_3"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/note_list_bg_3"
                            android:onClick="@{noteWriteActivity.onClick}"
                            android:text="@{bean.rank == 3 ? @string/right : @string/nothing}" />
                    </FrameLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/note_text_bg"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/note_bg_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/note_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:text="二级任务贴"
                    android:textColor="@{bean.rank == 3 ? @color/white : @color/black}"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toTopOf="@+id/note_edit_text"
                    app:layout_constraintEnd_toEndOf="@+id/note_edit_text"
                    app:layout_constraintStart_toStartOf="@+id/note_edit_text"
                    app:layout_constraintTop_toTopOf="@+id/note_text_bg" />
                <EditText
                    android:background="@null"
                    android:id="@+id/note_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="48dp"
                    android:hint="写点什么吧。"
                    android:maxLines="16"
                    android:text="@={bean.text}"
                    android:textColor="@{bean.rank == 3 ? @color/white : @color/black}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/note_text_bg" />

                <ImageView
                    android:id="@+id/note_clock_logo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="80dp"
                    android:onClick="@{noteWriteActivity.onClick}"
                    android:src="@mipmap/clock_blue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

                <TimePicker
                    android:id="@+id/note_clock_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:timePickerMode="spinner"
                    app:layout_constraintBottom_toBottomOf="@+id/note_clock_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/note_clock_logo"
                    app:layout_constraintTop_toTopOf="@+id/note_clock_logo" />

                <ImageView
                    android:id="@+id/note_clock_title_logo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="20dp"
                    android:onClick="@{noteWriteActivity.onClick}"
                    android:src="@mipmap/title_blue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/note_clock_logo"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/note_clock_logo"
                    app:layout_constraintTop_toBottomOf="@+id/note_clock_logo" />

                <EditText
                    android:background="@drawable/edit_bg"
                    android:id="@+id/note_clock_title"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:hint="闹钟标题"
                    app:layout_constraintBottom_toBottomOf="@+id/note_clock_title_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/note_clock_title_logo"
                    app:layout_constraintTop_toTopOf="@+id/note_clock_title_logo"
                    app:layout_constraintVertical_bias="0.6"></EditText>

            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>


    </android.support.constraint.ConstraintLayout>
</layout>